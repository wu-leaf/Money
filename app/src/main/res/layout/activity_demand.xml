<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_demand"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#4891ee"
    tools:context="com.veyron.www.money.activitys.DemandActivity">
    <include layout="@layout/titlebar_deman"></include>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <Button
        android:id="@+id/ceping"
        android:layout_width="130dp"
        android:layout_height="100dp"
        android:alpha="0"
        android:text="开始评测"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="370dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/need"
        android:id="@+id/imageView2"/>
</FrameLayout>

</LinearLayout>
